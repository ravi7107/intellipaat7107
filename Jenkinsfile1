pipeline {
  agent any

  stages {
    stage ("Build the maven war package") {
      steps {
        node ("build_server") {
          
          //Checkout the SCM
          print ("Downloading the source code from GitHub")
          checkout scmGit(
            branches: [[name: '*/hello-world-project']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/ravi7107/intellipaat7107.git']]
          )
          
          //Delete and create a new war package
          print ("Delete the old maven package")
          print ("Creating new maven package")
          sh "mvn clean install"

          //Stash the war apackage
          print ("Preparing the war package to copy to the deploy server")
          dir("/home/ubuntu/build_server/workspace/declarative_pipeline_example2/target") {
            //stash( includes:"/home/ubuntu/build_server/workspace/declarative_pipeline_example2/target/hello-world-webapp.war", name: "hello-world-project")
            stash( includes:"hello-world-webapp.war", name: "hello-world-project")
          }
        }
      }
    }
    
    stage ("Deploy the maven package") {
      steps {
        node ("deploy_server") {
          //Delete the old maven package
          print ("Deleting the old maven package")
          sh "rm -rf /tomcat/webapps/hello-world-webapp.war"
          
          //Unstash the maven package
          print ("Setting the directory to webapps")
          dir("/tomcat/webapps") {
            print ("Getting the package from the build server")
            unstash( name: "hello-world-project")
          }
        }
      } 
    } 
  }
}
